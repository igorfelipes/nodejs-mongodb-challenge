{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "resolveJsonModule": true,
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "lib": ["esnext"]
  },
  "exclude": [
    "node_modules",
    "dist",
    "prisma",
    "report",
    "src/**/*.spec.ts",
    "src/mock"
  ]
}
